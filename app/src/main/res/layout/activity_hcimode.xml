<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hcimode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pra.hciapp.HCIModeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="107dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Voice mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/voiceModeBtn"
            android:onClick="pressedVoiceMode" />

        <Button
            android:text="gesture mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gestureModeBtn"
            android:onClick="pressedGestureMode" />

        <Button
            android:text="what's my mood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageModeBtn"
            android:onClick="pressedImageMode" />

        <Button
            android:text="gaming mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gameModeBtn"
            android:onClick="pressedGameMode" />

        <Button
            android:text="keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/keyBtn"
            android:onClick="startKeyboard" />
    </LinearLayout>

</RelativeLayout>
