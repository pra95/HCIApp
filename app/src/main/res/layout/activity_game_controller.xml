<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pra.hciapp.GameController">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearL">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/spn1" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/spn2" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/spn3" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/spn4" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/spn5" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/spn6" />

        <Button
            android:text="done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doneBtn"
            android:onClick="settDone" />
    </LinearLayout>

    <Button
        android:text="Button"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/press1"
        android:onClick="do1" />

    <Button
        android:text="Button"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/press3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="do3" />

    <Button
        android:text="Button"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/press4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="do4" />

    <Button
        android:text="Button"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/press5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="do5" />

    <Button
        android:text="Button"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:id="@+id/press2"
        android:onClick="do2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Button"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/press6"
        android:onClick="do6"
        android:layout_above="@+id/press4"
        android:layout_alignLeft="@+id/press4"
        android:layout_alignStart="@+id/press4" />

    <Button
        android:text="i"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/setting"
        android:onClick="doSet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />
</RelativeLayout>
